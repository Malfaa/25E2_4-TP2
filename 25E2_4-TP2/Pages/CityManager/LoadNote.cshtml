@page
@model _25E2_4_TP2.Pages.CityManager.LoadNote

@{
    ViewData["Title"] = "Carregar Nota";
}

<!DOCTYPE html>

<h2>@ViewData["Title"]</h2>
<div style="width: 30%; padding: 10px;">
    <h4>Arquivos Disponíveis</h4>
    <ul>
        @foreach (var fileName in Model.Arquivos)
        {
            <li>
                <a href="?file=@fileName">@fileName</a>
            </li>
        }
    </ul>
</div>

<div style="width: 70%; padding: 10px;">
    @if (!string.IsNullOrEmpty(Model.ConteudoArquivo))
    {
        <h4>Conteúdo do Arquivo</h4>
        <pre style="background: #f5f5f5; padding: 10px;">@Model.ConteudoArquivo</pre>
        <a href="/files/@(Request.Query["file"])" download class="btn btn-sm btn-primary">
            Baixar Arquivo
        </a>
    }
    else
    {
        <p>Selecione um arquivo para visualizar.</p>
    }
</div>